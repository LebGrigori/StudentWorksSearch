<Window x:Class="StudentWorksSearch.PlagiarismCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentWorksSearch"
        mc:Ignorable="d"
        Title="PlagiarismCheck" Height="160" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="CornflowerBlue">
            <TextBlock Name="txtHead" Margin="5" HorizontalAlignment="Center" FontSize="14">Идет проверка</TextBlock>
        </Border>
        <ProgressBar Name="progressBar" Grid.Row="1" Margin="10 5" Height="15"></ProgressBar>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center">Уникальность:</TextBlock>
        <TextBlock Name="txtPlag" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">...</TextBlock>
    </Grid>
</Window>
